{
    "name": "davro/php-bit",
    "description": "Behavioral Integrity Testing (BIT) library for PHP to detect and prevent behavioral drift in applications.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "David Stevens",
            "email": "mail.davro@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "sebastian/diff": "^5.1",
        "symfony/console": "^6.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "BIT\\": "src/BIT/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BIT\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
